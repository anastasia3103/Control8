<Page x:Class="Control8.View.AddActivityPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Control8.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="550"
      Title="AddActivityPage">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите активность" FontSize="30" HorizontalAlignment="Center"  />
            <Separator Height="20" Width="0"/>
            <TextBox x:Name="AddFcTb" Width="300" Height="50" HorizontalAlignment="Center"/>
            <Separator Height="20" Width="0"/>
            <TextBlock Text="Выберите тип активности" FontSize="30" HorizontalAlignment="Center" />
            <Separator Height="20" Width="0"/>
            <ComboBox Name="DirectionCmb"  Width="300" Height="50" />
            <Separator Height="20" Width="0"/>
            <Button Width="200" Height="54" FontSize="30" Name="AddBtn" Click="AddBtn_Click"  Content="Добавить"/>


        </StackPanel>
    </Grid>
</Page>
